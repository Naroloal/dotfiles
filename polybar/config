[module/updates]
type=custom/script
exec = checkupdates | wc -l
exec-if = [[ $(checkupdates | wc -l) != 0 ]]
format =  <label> update(s) 
format-margin = 2
tail = true
label-font = 10
interval = 30
click-left = alacritty -t "update" -e sudo pacman -Syu --noconfirm 
format-underline = #FF5252


[module/weather]
type=custom/script
exec= ~/.config/polybar/weather.py
interval = 1800
format=<label>
tail=true
label-padding = 1
format-underline = #FFB224
#click-left= notify-send "$(curl --silent wttr.in)"

[module/weather2]
type=custom/script
